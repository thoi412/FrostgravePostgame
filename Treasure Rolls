def main():
	try:
		treasures = int(input("How many treasures did you recover?"))
		for _ in range(treasures):
			print(treasureTable())
			sleep(0.5)
	except:
		print(“Try again, but put in a number like 3 next time.”)

if __name__ = "__main__":
    main()
